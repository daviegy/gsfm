@model iHealth2.Models.ProductsInfo

@{
    ViewBag.Title = "Drug_Detail";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="container-fluid">
    <div class="divPanel page-content">
        <div class="breadcrumbs">
            <a href="/">Home</a> &nbsp;/&nbsp;<a href="@Request.UrlReferrer.ToString()" style="color:red">Back</a> &nbsp;/&nbsp;<span>Drug's Details</span>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <h3 class="text-success" style="text-align:center;font-weight:700">DRUG'S DETAIL</h3><br />
                <div class="span5">
                    @{
                        var img1 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage);
                        var img2 = "";
                        var img3 = "";
                        var img4 = "";
                        if (Model.ProductImage2 != null)
                        {
                            if (Model.ProductImage3 != null)
                            {
                                if (Model.ProductImage4 != null)
                                {
                                    img2 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage2);
                                    img3 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage3);
                                    img4 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage4);
                                }
                                else
                                {
                                    img2 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage2);
                                    img3 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage3);

                                }
                            }
                            else
                            {
                                img2 = "data:image/png;base64, " + Convert.ToBase64String(Model.ProductImage2);
                            }

                        }

                    }


                    <div class="flexslider">
                        <ul class="fxslides">
                            <li data-thumb="@img1">
                                <div class="thumb-image"> <img src="@img1" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                            </li>
                            @if (img2 != "")
                            {
                                <li data-thumb="@img2">
                                    <div class="thumb-image"> <img src="@img2" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                </li>
                            }
                            @if (img3 != "")
                            {
                                <li data-thumb="@img3">
                                    <div class="thumb-image"> <img src="@img3" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                </li>
                            }
                            @if (img4 != "")
                            {
                                <li data-thumb="@img4">
                                    <div class="thumb-image"> <img src="@img4" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="span6 ">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th colspan="2" style="background-color:#d6e9c6;color:#468847">Product Information</th>
                        </tr>
                        <tr>
                            <th>
                                <b>Product Name </b>
                            </th>
                            <td>
                                @Model.ProductName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <b>Product Category</b>
                            </th>
                            <td>@Model.ProductCategory</td>
                        </tr>
                        <tr>
                            <th>
                                Price
                            </th>
                            <td>&#8358;@Model.price</td>
                        </tr>
                    </table>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th colspan="2" style="background-color:#bce8f1;color:#3a87ad">Owner Information and Address</th>
                        </tr>
                        <tr>
                            <th>
                                <b><i class="icon icon-user"></i>&nbsp;Owner's Name</b>
                            </th>
                            <td>
                                @Model.OwnerInfo.FullName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <b><i class="icon icon-mobile-phone"></i>&nbsp;Mobile</b>
                            </th>
                            <td>@Model.OwnerInfo.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>
                                <b><i class="icon icon-home"></i>&nbsp;Address:</b>
                            </th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th>
                                <b>State: </b>
                            </th>
                            <td>@Model.State</td>
                        </tr>
                        <tr>
                            <th>
                                <b>Country : </b>
                            </th>
                            <td>@Model.Country</td>
                        </tr>

                    </table>
                </div>
            </div>
            <div class="span12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            Product Description
                        </div>
                    </div>
                    <div class="panel-body">
                        <p>
                            @Model.ProductDescription
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Plugins/AjaxZoom/easing.js"></script>
    <script src="~/Scripts/Plugins/AjaxZoom/imagezoom.js"></script>
    <script src="~/Scripts/Plugins/AjaxZoom/jquery.flexslider.js"></script>
    <script>
    // Can also be used with $(document).ready()
    $(window).load(function () {
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: "thumbnails"
        });
    });
    </script>
}