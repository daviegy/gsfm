    <script src="~/Scripts/AdminScripts/iCheck/icheck.js"></script>
    <script>
        $(document).ready(function () {
            //Enable iCheck plugin for checkboxes
            //iCheck for checkbox and radio inputs
            $('input[type="checkbox"], input[type="radio"]').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            });
        });
        $("div.desc").hide();

        $("input[Name$='PaymentOptions']").on('ifClicked', function () {
            // alert("i see u");
            // $("div.desc").show();
            var rdChecked = $(this).val();
            if (rdChecked == "CreditCard") {
                $("#CreditCard").show()
                $("#PayToBank").hide()
            } else {
                $("#PayToBank").show()
                $("#CreditCard").hide()
            }
            
        })
        $("#RefCode").blur(function () {
            //alert( $("#RefCode").val())
            //  var sponsor =
            var sponsorName = document.getElementById
            var opt = {};
            opt.url = "/Home/CheckSponsor";
            opt.type = "Post";
            opt.dataType = "json";
            opt.data = JSON.stringify({ RefCode: $("#RefCode").val() });
            opt.contentType = "application/json";
            opt.success = function (sponsordetails) {
                $("#SponsorN").text(sponsordetails);
            };
        
            $.ajax(opt);


        })
    </script>
