@model IEnumerable<iHealth2.Models.UrgentNeedForDrugsTb>
@{
    ViewBag.Title = "TreatedDrugRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
       
                <table id="table">
                    <thead>
                        <tr>
                            
                            <th>SN</th>
                            <th>Drug Name</th>
                            <th>Manufacturer</th>
                            <th>Requestor Name</th>
                            <th>Phone Number</th>
                            <th>Email Address</th>
                            <th>Country</th>
                            <th>State</th>
                            <th>City</th>
                            <th>Address</th>
                            <th>Treated Date</th>
                            <th>Request Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int c = 0;
                            foreach (var item in Model)
                            {
                                c++;
                                <tr>
                                    
                                    <td>@c</td>
                                    <td>@item.DrugName</td>
                                    <td>@item.Manufacturer</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@item.Country</td>
                                    <td>@item.State</td>
                                    <td>@item.City</td>
                                    <td>@item.Address</td>
                                    <td>@item.TreatedDate</td>
                                    <td>@item.RequestStatus</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
      
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Plugins/bootstrap-table.js"></script>
    <script>
    $('#table').bootstrapTable({

        striped: true,
        // cardView: true,
        pagination: true,
        pageSize: 15,
        pageList: [15, 30, 50, 100, 200],
        smartDisplay: false,
        showToggle: false,
        search: true,
        showColumns: true,
        showRefresh: true,
        //    border : true
        //align: 'center',
        //valign: 'bottom'

    });
    </script>

}
