@model IEnumerable<iHealth2.Models.ApplicationUser>

@{
    ViewBag.Title = "All_Buser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table" style="text-transform:capitalize">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>
                                @Html.DisplayNameFor(model => model.MyRefferalCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RegDate)
                            </th>


                        </tr>

                    </thead>
                    <tbody>
                        @{
                            int counter = 0;

                        }

                        @foreach (var item in Model)
                        {


                            counter = counter + 1;

                            <tr>
                                <td>

                                    @counter
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MyRefferalCode)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                             

                             
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.RegDate)
                                </td>



                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>


@section scripts{
    <script src="~/Scripts/Plugins/bootstrap-table.js"></script>
    <script>
    $('#table').bootstrapTable({

        striped: true,
        // cardView: true,
        pagination: true,
        pageSize: 15,
        pageList: [15, 25, 50, 100, 200],
        smartDisplay: false,
        showToggle: true,
        search: true,
        showColumns: true,
        showRefresh: true,
        //    border : true
        //align: 'center',
        //valign: 'bottom'

    });
    </script>
}



