@model iHealth2.Models.AdvertManagerViewModel

@{
    ViewBag.Title = "CreatAds";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   // Layout = "~/Views/Shared/_SuperAdmLayout.cshtml";
}

<div class="panel panel-default">
    <div class=" panel-body">
        <form method="post" action="\SuperAdm\createAds" enctype="multipart/form-data">


            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3> <b class="text-danger">Note: Advert Image must match the size of Advert Location</b></h3>
                <hr />
                <b class="text-danger">@Html.ValidationSummary()</b>
                <div class="form-group">
                    @Html.LabelFor(model => model.AdsOwner, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdsOwner, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdsOwner, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adspage.pageName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.adspage.pageId, new SelectList(new iHealth2.Models.AdspageModel().GetPage(), "pageId", "pageName"), "Select", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.adspage.pageId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AdsLocOnPage.locName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.AdsLocOnPage.locId, new SelectList(new iHealth2.Models.AdsLocationOnPageModel().GetLocation(), "locId", "locName"), "select", new { @class = "form-control", id = "locId" })
                        @Html.ValidationMessageFor(model => model.AdsLocOnPage.locId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="text-danger col-md-10">
                        @ViewBag.errorMsg
                    </div>
                </div>
                           
                <div class="form-group" >
                    <label class="control-label col-md-2">
                        Advert Image*
                    </label>
                    <div class="col-md-10">
                        <input name="AdsImage" id="AdsImage" type="file" class="file-loading" accept="image/*">
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AdsUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdsUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdsUrl, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                      @*  <input type="submit" id="btnSubmit" value="Create Advert" class="btn btn-danger" />*@
                        <button id="btnSubmit" class="btn btn-danger">Create Advert</button>
                    </div>
                </div>
            </div>
        </form>

        <div>
            @Html.ActionLink("Back to List", "ViewAdsList")
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Plugins/sweetalert.min.js" type="text/javascript"></script>
<script src="~/Scripts/Plugins/fileinput.js"></script>
<script src="~/Scripts/customscript/AdsScript.js"></script>
@Scripts.Render("~/bundles/jqueryval")
}
