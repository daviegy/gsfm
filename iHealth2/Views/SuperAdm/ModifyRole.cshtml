@model iHealth2.Models.ModifyRoleViewModel

@{
    ViewBag.Title = "ModifyRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
  //  Layout = "~/Views/Shared/_SuperAdmLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h3><b class="text-info">Basic Information</b></h3>
        <br />
        <table class="table">
            <tbody>
                <tr>
                    <th>
                        @Html.LabelFor(model => model.FullName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.FullName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.LabelFor(model => model.CurrentRole)
                    </th>
                    <td>
                        @if (Model.CurrentRole == "SA")
                        {
                            <span>Super Admin</span>
                        }

                        else
                        {
                            <span>
                                Admin
                            </span>
                        }

                    </td>
                </tr>
            </tbody>
        </table>
        <hr />
        <br />
        <h3><b class="text-red">Modify Role</b></h3><hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

              <div class="form-group">
                    <b class="control-label col-md-2">Roles</b> 
                    <div class="col-md-10">
                        <select required name="roles" class="form-control">
                            <option value="">Select</option>
                            <option value="AD">Admin</option>
                            <option value="SA">Super Admin</option>
                        </select>
                    </div>
                </div>
                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modify" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "viewadmins")
        </div>

    </div>
</div>