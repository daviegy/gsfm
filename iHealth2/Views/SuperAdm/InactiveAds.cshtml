@model IEnumerable<iHealth2.Models.AdvertManagerTb>

@{
    ViewBag.Title = "InactiveAds";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   // Layout = "~/Views/Shared/_SuperAdmLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-body">
        <p>
            @Html.ActionLink("Create New", "CreateAds")
        </p>
        <div class="table-responsive mailbox-messages">
           
                <table id="tbls">
                    <thead>
                        <tr>
                            <th>
                                <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                                    <i class="fa fa-square-o"></i>
                                </button>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdsOwner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdsName)
                            </th>


                            <th>
                                @Html.DisplayNameFor(model => model.Adspage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdsLocOnPage)
                            </th>


                            <th>
                                @Html.DisplayNameFor(model => model.AdsURL)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdsStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>

                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="ItemId" id="MarkAsReactivate" value="@item.Id"></td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.AdsOwner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdsName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adspage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdsLocOnPage)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.AdsStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdsURL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <input type="button" id="ReactivateAds" class="btn btn-success" value="Re-activate" onclick="ReactivateAds()"/>
                <a href="/superadm/activeads"class="btn btn-info">Active Advert List</a>
                <input type="button" id="DeleteAds" class="btn btn-danger" value="Delete Ads" onclick="DeleteAds()"/>            

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Plugins/bootstrap-table.js"></script>
    <script>
        $('#tbls').bootstrapTable({

            striped: true,
            // cardView: true,
            pagination: true,
            pageSize: 10,
            pageList: [10, 25, 50, 100, 200],
            smartDisplay: false,
            showToggle: true,
            search: true,
            showColumns: true,
            showRefresh: true,
            border: true,
            align: 'center',
            valign: 'bottom'

        });
    </script>
    <script src="~/Scripts/AdminScripts/iCheck/icheck.js"></script>
    <script>
        $(document).ready(function () {
            //Enable iCheck plugin for checkboxes
            //iCheck for checkbox and radio inputs
            $('.mailbox-messages input[type="checkbox"]').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });

            //Enable check and uncheck all functionality
            $(".checkbox-toggle").click(function () {
                var clicks = $(this).data('clicks');
                if (clicks) {
                    //Uncheck all checkboxes
                    //  alert("i just got clicked")
                    $(".mailbox-messages input[type='checkbox']").iCheck("uncheck");
                    $(".fa", this).removeClass("fa-check-square-o").addClass('fa-square-o');
                } else {
                    //Check all checkboxes
                    $(".mailbox-messages input[type='checkbox']").iCheck("check");
                    $(".fa", this).removeClass("fa-square-o").addClass('fa-check-square-o');
                }
                $(this).data("clicks", !clicks);
            });


        });
    </script>
    <script src="~/Scripts/Plugins/dpLoading-2.x.js"></script>
    <script src="~/Scripts/Plugins/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/Scripts/customscript/AdsScript.js"></script>
   
}
