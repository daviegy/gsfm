@model iHealth2.Models.profileViewModel
@using iHealth2.CustomClasses;
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
    // ApplicationUserManager usm ;
}
<section class="content-header">
    <h1>
        Dashboard
        <small>Profile</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/INI_Subscriber/Userpanel"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row-fluid">
                @if (Model.photo == null)
                {
                    <div class="span5">
                        <img src="~/content/images/placeholder.gif" class="img-polaroid" style="margin:5px 0px 15px;" alt="">
                        <br /><a href="/home/Photoupload" class="btn btn-danger">Add New Profile Photo <i class="icon icon-camera"></i></a>

                    </div>
                }
                else
                {
                    <div class="span4">
                        <img src="@Model.photo" class="img-polaroid" style="margin:5px 0px 15px;width:100px;height:100px" alt=""><br />
                        <a href="/home/Photoupload" class="btn  btn-danger">Update Profile Photo <i class="icon icon-camera"></i></a>
                        <br /><br /><br />
                    </div>

                }

                <table class="table table-striped" border="0" style="border:none">

                    <tr>
                        <th>
                            ID
                        </th>
                        <td>@Model.tID</td>
                    </tr>
                    <tr>
                        <th>
                            Name
                        </th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>
                            Nationality
                        </th>
                        <td>
                            @if (Model.Nationality != null)
                            {
                                <span>@Model.Nationality</span> <span>|</span> <a href="#" style="text-decoration:underline">Edit</a>
                            }
                            else
                            {
                                <a href="#" style="text-decoration:underline">Add Nationality</a>
                            }
                    </td>
                </tr>
                <tr>
                    <th>
                        State
                    </th>
                    <td>
                        @if (Model.state != null)
                        {
                            <span>@Model.state</span> <span>|</span> <a href="#" style="text-decoration:underline">Edit</a>

                        }
                        else
                        {
                            <a href="#" style="text-decoration:underline">Add State</a>
                        }
                </td>
            </tr>
            <tr>
                <th>
                    City
                </th>
                <td>
                    @if (Model.city != null)
                    {
                        <span>@Model.city</span> <span>|</span> <a href="#" style="text-decoration:underline">Edit</a>

                    }
                    else
                    {
                        <a href="#" style="text-decoration:underline">Add City</a>
                    }
            </td>
        </tr>
        <tr>
            <th>
                Address
            </th>
            <td>@if (Model.Address != null)
            {
                <span>@Model.Address</span> <span>|</span> <a href="#" style="text-decoration:underline">Edit</a>
            }
            else
            {
                <a href="#" style="text-decoration:underline">Add Address</a>
            }</td>
        </tr>
        <tr>
            <th>
                Email
            </th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>
                Phone Number
            </th>
            <td>@Model.phone</td>
        </tr>
        <tr>
            <td colspan="2">
                @{
                    string s = System.Configuration.ConfigurationManager.AppSettings["MaxLevel"];
                    String EncryptId = Cryptoclass.EncryptStringAES(Model.Id, s);
                    EncryptId = EncryptId.Replace("/", "$25");
                    EncryptId = EncryptId.Replace("+", "$24");
                }
                <a href="#" class="btn btn-warning" title="Click to edit profile">Edit Profile</a>
                @* /Users/Edit/?id=@EncryptId *@
            </td>
        </tr>


    </table>

</div>


</div>
</div>

