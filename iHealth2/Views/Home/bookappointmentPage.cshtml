@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-title-heading">
                    <h1 class="h1-title">Book Appointment</h1>
                </div><!-- /.page-title-heading -->
                <ul class="breadcrumbs">
                    <li><a href="#" title="">Home<i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                    <li><a href="#" title="">Appointment</a></li>
                </ul><!-- /.breadcrumbs -->
                <div class="clearfix"></div><!-- /.clearfix -->
            </div>
        </div>
    </div>
</div><!-- /.page-title -->
<section class="flat-row pd-aboutv3">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-md-offset-2">
                <div class="wrap-main-post about-v3">
                    <div class="box-content">
                        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
                            <div style="width: 100%; height: 20px; border-bottom: 1px solid black; text-align: center">
                                <span style="font-size: 20px; background-color: #ffffff; padding: 0 10px;">
                                    Fill Appointment Form
                                </span>
                            </div>
                        </div>
                        <br><br>
                        @Html.Partial("_appBookingform")
                    </div>
                </div>
            </div>
        </div>            
        </div>
</section>
@section scripts{
    <script src="~/Scripts/Plugins/bootstrap-datepicker.js"></script>
    <script>
        $('.datepicker').datepicker({
            startDate: "@DateTime.Now"
        });
    </script>
}
