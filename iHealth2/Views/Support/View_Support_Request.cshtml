@model IEnumerable<iHealth2.Models.Support>
@using iHealth2.CustomClasses;
@{
    ViewBag.Title = "View_Support_Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table id="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            <span>Ticket ID</span>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Content)
                        </th>
                        <th>
                            <span>Requestor_Name</span>
                        </th>
                        <th>
                            <span>Requestor_Email</span>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.support_status)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Support_createdDate)
                        </th>

                    </tr>
                </thead>


                @foreach (var item in Model)
                {

                 // string t = "cccak clcna laaca kcakca kckacaca cacacas cacacac acaca caca acac acacacasc".ToString().Chop(50);
                   // string displayContent = StringExtensionss.CropWholeWords(item.Content, 30);
                        //System.Text.RegularExpressions.Regex.Match(@item.Content.ToString(), @"^\W*(\w+(\W+|$)){1,5}$").ToString();
                    <tr>
                        <td>
                           @Html.ActionLink("Reply/Process", "Process_Support_Request", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete_Support_Request", new { id = item.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                        
                            <p style="text-align:justify;font-size:12pt">@Html.Raw(Server.HtmlDecode(item.Content))<a href="/support/Process_Support_Request/?id=@item.Id">[...]</a></p>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Support_Requestor_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Support_Requestor_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.support_status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Support_createdDate)
                        </td>

                    </tr>
                }

            </table>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Plugins/bootstrap-table.js"></script>
    <script>
    $('#table').bootstrapTable({
        striped: true,
        // cardView: true,
        pagination: true,
        pageSize: 10,
        pageList: [10, 25, 50, 100, 200],
        smartDisplay: false,
        showToggle: true,
        search: true,
        showColumns: true,
        showRefresh: true,
        cellStyle: "color:red"
      

    });
    </script>

}